generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model siteUser {
  id       Int      @id @default(autoincrement())
  username String
  password String
  recipes  Recipe[]
}

model Ingredient {
  id        Int      @id @default(autoincrement())
  name      String
  amount    String
  sectionId Int?
  Section   Section? @relation(fields: [sectionId], references: [id])
}

model Step {
  id        Int      @id @default(autoincrement())
  number    Int
  action    String
  sectionId Int?
  Section   Section? @relation(fields: [sectionId], references: [id])
}

model RecStep {
  id       Int     @id @default(autoincrement())
  number   Int
  action   String
  recipeId Int?
  Recipe   Recipe? @relation(fields: [recipeId], references: [id])
}

model Recipe {
  id        Int       @id @default(autoincrement())
  name      String
  user      String
  notes     String
  timestamp DateTime  @default(now())
  sections  Section[]
  recsteps  RecStep[]
  userId    Int?
  author    siteUser? @relation(fields: [userId], references: [id])
}

model Section {
  id          Int          @id @default(autoincrement())
  title       String
  number      Int
  ingredients Ingredient[]
  steps       Step[]
  recipeId    Int?
  Recipe      Recipe?      @relation(fields: [recipeId], references: [id])
}
